https://takeuforward.org/plus/dsa/problems/minimum-number-of-platforms-required-for-a-railway

class Solution:
    def findPlatform(self, Arrival, Departure):
        Arrival.sort()
        Departure.sort()
        n = len(Arrival)
        plat, res = 1, 1
        i, j = 1, 0
        while i < n and j < n:
            if Arrival[i] <= Departure[j]:
                plat += 1
                i += 1
            else:
                plat -= 1
                j += 1
            res = max(res, plat)
        return res
