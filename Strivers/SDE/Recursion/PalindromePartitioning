https://takeuforward.org/plus/dsa/problems/palindrome-partitioning

class Solution:
    def partition(self, s):
        res = []

        def is_palindrome(sub):
            return sub == sub[::-1]

        def backtrack(start, path):
            # if weâ€™ve reached the end, add the current partition
            if start == len(s):
                res.append(path[:])
                return

            for end in range(start + 1, len(s) + 1):
                substr = s[start:end]
                if is_palindrome(substr):
                    path.append(substr)
                    backtrack(end, path)
                    path.pop()  # backtrack

        backtrack(0, [])
        return res
