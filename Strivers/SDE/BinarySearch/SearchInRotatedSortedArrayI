https://takeuforward.org/plus/dsa/problems/search-in-rotated-sorted-array-i

class Solution:
    def search(self, nums, k):
        low, high = 0, len(nums) - 1

        while low <= high:
            mid = (low + high) // 2

            if nums[mid] == k:
                return mid

            # Left half is sorted
            if nums[low] <= nums[mid]:
                if nums[low] <= k < nums[mid]:
                    high = mid - 1
                else:
                    low = mid + 1
            # Right half is sorted
            else:
                if nums[mid] < k <= nums[high]:
                    low = mid + 1
                else:
                    high = mid - 1

        return -1
